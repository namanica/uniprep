{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["JWT_SECRET", "JWT_EXPIRES_IN", "JWT_REFRESH_EXPIRES_IN"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": ["JWT_SECRET", "JWT_EXPIRES_IN", "JWT_REFRESH_EXPIRES_IN"]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "env": ["JWT_SECRET", "JWT_EXPIRES_IN", "JWT_REFRESH_EXPIRES_IN"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["JWT_SECRET", "JWT_EXPIRES_IN", "JWT_REFRESH_EXPIRES_IN"]
    }
  }
}
